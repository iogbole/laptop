for pkg in postgres mysql redis the_silver_searcher vim ctags tmux reattach-to-user-namespace imagemagick phantomjs watch htop-osx wget node; do
  if brew list -1 | grep -q "^${pkg}\$"; then
    fancy_echo "Package '$pkg' is installed"
  else
    fancy_echo "Installing '$pkg' ..."
    brew install $pkg
  fi
done
